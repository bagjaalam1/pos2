<title> POS - Goods </title>

<%- include('../partials/header.ejs') %>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Form Add</h6>
        </div>


        <form method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="row mb-3">
                    <label for="input1" class="col-sm-2 col-form-label">Barcode</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="input1" name="barcode" maxlength="20" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="input2" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="input2" name="name" maxlength="150" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="input3" class="col-sm-2 col-form-label">Stock</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="input3" name="stock" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="input3" class="col-sm-2 col-form-label">Purchase Price</label required>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="input3" name="purchaseprice" placeholder="0">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="input3" class="col-sm-2 col-form-label">Selling Price</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="input3" name="sellingprice" placeholder="0" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="input3" class="col-sm-2 col-form-label">Unit</label>
                    <div class="col-sm-10">
                        <select name="unit" class="custom-select custom-select-sm form-control form-control-sm">
                            <% for (var i=0; i < rows.length; i++) { %>
                                <option value="<%=rows[i].unit%>">
                                    <%=rows[i].unit%>
                                </option>
                                <% } %>
                        </select>
                    </div>
                </div>
                    <div class="row mb-3">
                        <label for="gambar-input" class="col-sm-2 col-form-label">Picture</label>
                        <div class="col-sm-10 custom-file">
                            <input type="file" class="form-control" id="gambar-input" name="picture" required>
                        </div>
                    </div>
                <div class="row mb-3">
                    <label for="input3" class="col-sm-2 col-form-label">Preview</label>
                    <div class="col-sm-10">
                        <img src="" alt="" id="preview-gambar" width="200" height="200">
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50"
                        style="display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-database"></i>
                    </span> 
                    <span class="text">Save</span>
                </button>

                <a href="javascript:history.back()" class="btn btn-warning btn-icon-split">
                    <span class="icon text-white-50"
                        style="display: flex; align-items: center; justify-content: center;">
                        <i class="fa fa-undo" aria-hidden="true"></i>
                    </span>
                    <span class="text">Back</span>
                </a>
            </div>
        </form>
    </div>
    <% if(info.length> 0) { %>
        <div class="alert alert-danger" role="alert">
            <%= info %>
        </div>
        <% } %>

            <script>
                const gambarInput = document.getElementById('gambar-input')
                const previewGambar = document.getElementById('preview-gambar')

                gambarInput.addEventListener('change', (event) => {
                    const gambar = event.target.files[0]
                    const reader = new FileReader()

                    reader.addEventListener('load', () => {
                        previewGambar.src = reader.result
                    })

                    reader.readAsDataURL(gambar)
                })
            </script>

            <%- include('../partials/footer.ejs') %>