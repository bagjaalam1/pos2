<title> POS - Users </title>

<%- include('../partials/header.ejs') %>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Form Add</h6>
        </div>


        <form method="post">
            <div class="card-body">
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="inputEmail3" name="email">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="name" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="name" name="name">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="inputPassword3" name="password">
                    </div>
                </div>
                <fieldset class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0">Role</legend>
                    <div class="col-sm-10">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="roleRadio" id="gridRadios1"
                                value="operator" checked>
                            <label class="form-check-label" for="gridRadios1">
                                Operator
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="roleRadio" id="gridRadios2"
                                value="admin">
                            <label class="form-check-label" for="gridRadios2">
                                Admin
                            </label>
                        </div>
                    </div>
                </fieldset>
                
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-database"></i>
                    </span>
                    <span class="text">Save</span>
                </button>

                <a href="javascript:history.back()" class="btn btn-warning btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fa-sharp fa-solid fa-rotate-left"></i>
                    </span>
                    <span class="text">Back</span>
                </a>
            </div>
        </form>
    </div>
    <% if(info.length > 0) { %>
        <div class="alert alert-danger" role="alert">
            <%= info %>
        </div>
    <% } %>

    <%- include('../partials/footer.ejs') %>