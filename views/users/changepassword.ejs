<title> POS - Change Password </title>

<%- include('../partials/header.ejs') %>

    <% if(infoSuccess.length> 0) { %>
        <div class="alert alert-success" role="alert">
            <%= infoSuccess %>
        </div>
        <% } %>
        <% if(info.length> 0) { %>
            <div class="alert alert-danger" role="alert">
                <%= info %>
            </div>
            <% } %>

            <!-- Page Heading -->
            <div class="align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-1 text-gray-800">Change Password</h1>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Change Your Password</h6>
                </div>


                <form method="post">
                    <div class="card-body">
                        <div class="row mb-3">
                            <label for="input2" class="col-sm-2 col-form-label">Old Password</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="input2" name="oldpassword" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="input3" class="col-sm-2 col-form-label">New Password</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="input3" name="newpassword" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="input3" class="col-sm-2 col-form-label">Retype Password</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="input3" name="repassword" required>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-success btn-icon-split">
                            <span class="icon text-white-50"
                                style="display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-database"></i>
                            </span>
                            <span class="text">Update</span>
                        </button>
                    </div>
                </form>
            </div>

            <%- include('../partials/footer.ejs') %>